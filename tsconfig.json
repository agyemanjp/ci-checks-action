{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDirs": [
			"./src",
			"./src/types",
			"./src/tooling"
		],
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"keyofStringsOnly": true,
		"declaration": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"**/*.ts"
	]
}